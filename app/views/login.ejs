        <script>

            // Add this script in a <script> tag at the bottom of your HTML or in a separate .js file
            document.addEventListener('DOMContentLoaded', function() {
            const loginForm = document.querySelector('.login__form form');

            // Function to execute reCAPTCHA and get token
            const executeRecaptcha = () => {
                return new Promise((resolve, reject) => {
                    grecaptcha.ready(() => {
                        grecaptcha.execute('<%= site_key %>', { action: 'login' })
                            .then(token => {
                                document.getElementById('g-recaptcha-response').value = token;
                                resolve(token);
                            })
                            .catch(error => reject(error));
                    });
                });
            };

            // Form submission handler
            loginForm.addEventListener('submit', async function(e) {
                e.preventDefault();

                const email = this.querySelector('input[name="email"]').value;
                const password = this.querySelector('input[name="password"]').value;

                if (!email || !password) {
                    alert('Please fill in all required fields');
                    return;
                }

                try {
                    // Execute reCAPTCHA v3
                    const recaptchaToken = await executeRecaptcha();

                    const response = await fetch('/auth/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: new URLSearchParams({
                            email: email,
                            password: password,
                            'g-recaptcha-response': recaptchaToken,
                            'redirect_uri': `<%= req.query.redirect_uri %>`,
                        })

                    });

                    if (response.redirected) {
                        window.location.href = response.url;
                    } else {
                        const data = await response.json();
                        if (data.error) {
                            alert(data.error);
                        }
                    }
                } catch (error) {
                    console.error('Login error:', error);
                    alert('An error occurred during login. Please try again.');
                }
            });
        });

