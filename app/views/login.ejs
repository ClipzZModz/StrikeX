    <script>

        const notyf = new Notyf({
        duration: 3000,
        position: {
            x: 'left',
            y: 'bottom',
        },
        types: [
            {
            type: 'warning',
            background: 'orange',
            icon: {
                className: 'material-icons',
                tagName: 'i',
                text: 'warning'
            }
            }
        ]
        });

        function notify(type) {
        switch (type) {
            case 'success':
            notyf.success('Product has been added to the cart!');
            break;

            case 'warning':
            notyf.open({
                type: 'warning',
                message: 'There was a problem completing this request.'
            });
            break;

            case 'danger':
            notyf.error('There was an error adding this product to the cart.');
            break;

            default:
            notyf.open({
                type: 'warning',
                message: 'Unknown Error!'
            });
            break;
        }
        }


        window.cartItemsFromServer = <%- JSON.stringify(cartItems) %>;

        document.addEventListener('DOMContentLoaded', () => {
          document.querySelectorAll('.add-to-cart-btn').forEach(button => {
            button.addEventListener('click', async function () {
              const productId = this.getAttribute('data-product-id');
              const quantity = 1;

              if (!window.addToCart) {
                notify('danger');
                return;
              }

              try {
                await window.addToCart(productId, quantity);
                notify('success');
              } catch (error) {
                notify('danger');
              }
            });
          });
        });
      </script>


