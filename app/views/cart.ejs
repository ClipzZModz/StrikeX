                    <span>Cart Items</span>
                </div>
            </div>
        </section>
        <!-- Page banner area end here -->
    
    
        <section class="cart-page pt-130 pb-130">
            <div class="container">
              <div class="shopping-cart radius-10 bor sub-bg">
                <div class="row">
                  <div class="col-10 offset-1 d-flex flex-column align-items-center">
                    <!-- Column Labels (Table Headers) -->
                    <div class="mt-5 column-labels py-3 px-4 d-flex justify-content-between align-items-center fw-bold text-white text-uppercase w-100">
                      <label class="product-details" style="flex: 2;">Product</label>
                      <label class="product-price" style="flex: 1;">Price</label>
                      <label class="product-quantity" style="flex: 1;">Quantity</label>
                      <label class="product-line-price" style="flex: 1;">Total</label>
                    </div>
          
                    <!-- Cart Content -->
                    <div id="cart-content" class="w-100 text-center" style="margin: 2%">
                      <% if (!cartItems || cartItems.length === 0) { %>
                        <p>Your cart is empty.</p>
                      <% } else { %>
                        <% cartItems.forEach(item => { %>
                          <div class="product p-4 bor-top bor-bottom d-flex justify-content-between align-items-center">
                            <div class="product-details d-flex align-items-center">
                              <img src="<%= item.image || 'assets/images/shop/default.jpg' %>" alt="<%= item.title %>" style="max-width: 100px;">
                              <h4 class="ps-4 text-capitalize"><%= item.title %></h4>
                            </div>
                            <div class="product-price">&pound;<%= parseFloat(item.price).toFixed(2) %></div>
                            <div class="product-quantity">
                              <form action="/api/v1/cart/update" method="POST" style="display: inline;">
                                <input type="hidden" name="productId" value="<%= item.merchandiseId %>">
                                <input type="number" name="quantity" value="<%= item.quantity %>" min="1" onchange="this.form.submit()">
                              </form>
                            </div>
                     
                            <div class="product-line-price">&pound;<%= (parseFloat(item.price) * item.quantity).toFixed(2) %></div>
                            <div class="product-removal">
                              <form action="/api/v1/cart/remove" method="POST" style="display: inline;">
                                <input type="hidden" name="productId" value="<%= item.merchandiseId %>">
                                <button type="submit" class="remove-product">
                                  <i class="fa-solid fa-x heading-color"></i>
                                </button>
                              </form>
                            </div>
                          </div>
                        <% }); %>
                      <% } %>
                    </div>
          
                    <!-- Totals -->
                    <div class="totals w-100 text-center">
                      <div class="totals-item theme-color mt-20">
                        <span class="fw-bold text-uppercase py-2">Cart Total =</span>
                        <div class="totals-value d-inline py-2 pe-2" id="cart-subtotal">
                          &pound;<%= cartItems ? cartItems.reduce((sum, item) => sum + (parseFloat(item.price) * item.quantity), 0).toFixed(2) : '0.00' %>
                        </div>
                      </div>
                    </div>
          
                    <!-- Checkout Buttons -->
                    <div class="checkout-buttons d-flex justify-content-center mt-4 w-100 mb-5">
                      <a href="/" class="btn btn-secondary me-3">Continue Shopping</a>
                      <% if (cartItems && cartItems.length > 0 && typeof checkoutUrl !== 'undefined') { %>
                        <a href="<%= checkoutUrl %>" id="checkout-link" class="btn btn-primary">Proceed to Checkout</a>
                      <% } else { %>
                        <a href="#" id="checkout-link" class="btn btn-primary disabled">Proceed to Checkout</a>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </section>
        
        
        
        
        
